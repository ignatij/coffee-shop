{
  "name": "app",
  "packageManager": "yarn@3.2.4",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "init-db": "node ./src/init-database.js",
    "generate": "yarn graphql-codegen --config ./src/codegen.ts",
    "build": "yarn tsc && yarn copyfiles -u 1 src/*.graphql dist/",
    "compile": "yarn generate && yarn build",
    "start": "yarn compile && node ./dist/index.js",
    "dev": "concurrently \"yarn tsc --watch && yarn copyfiles -u 1 src/*.graphql dist/\" \"nodemon -q ./dist/index.js\""
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/node": "^20.8.8",
    "@types/pg": "^8.10.7",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.1",
    "typescript": "^5.2.2"
  }
}
